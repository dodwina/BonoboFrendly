{% extends 'FOSUserBundle:Default:layout.html.twig' %}
{% block title %} LIST{% endblock %}
{% block content %}
    <h1 class="center title ">THE BONOBOS FRIENDLY</h1>
   
    <table class="table table-hover table-responsive ">
        <thead>
            <tr>
                <th>Username</th>
                <th>Age</th>
                <th>Family</th>
                <th>Race</th>
                <th>Foods</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}  
            <tr>
               <td>{{ user.login }}</td>
                <td>{{ user.age }}</td>
                <td>{{ user.family }}</td>
                <td>{{ user.race }}</td>
                <td>{{ user.foods }}</td>              
                <td>
                    <ul class="">
                        <li>
                            <button type="submit" class=" btn-sm"><a href="{{ path('user_add', { 'id': user.id }) }}" method="" data-confirmation="true">ADD THIS BONOBO</a> </button>
                        </li>
                        <li>
                            <button type="submit" class="btn-danger btn-sm" data-confirmation ="true">DELETE THIS BONOBO</button>
                           
                    	</li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('fos_user_index') }}" class="btn btn-sm">HOME</a>
        </li>
    </ul>
{% endblock %}