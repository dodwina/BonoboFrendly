{% extends '::base.html.twig' %}

{% block title %}HOME{% endblock %}

{%  block FOSUserBundle_content %}
   {% if app.user and not null %}
   <h1 class="center">Welcome  {{ app.user.username }} !</h1>
   {% else %}
   <h1 class="center">Welcome Dear Bonobo !</h1>
   {%endif %}
       <h1 class="center title ">THE BONOBOS FRIENDLY </h1>

       <table class="table table-hover table-responsive ">
          <thead>
          <tr>
             <th>Username</th>
             <th>Age</th>
             <th>Family</th>
             <th>Race</th>
             <th>Foods</th>
          </tr>
          </thead>
          <tbody>
          {% for user in users %}
             <tr>
                <td>{{ user.username }}</td>
                <td>{{ user.calculateAge }}</td>
                <td>{{ user.family }}</td>
                <td>{{ user.race }}</td>
                <td>{{ user.foods }}</td>
                <td>
                   <ul class="">
                      <li>
                         <button type="submit" class=" btn-sm"><a href="{{ path('user_add', { 'id': user.id }) }}"  data-confirmation="true">ADD THIS BONOBO</a> </button>
                      </li>
                   </ul>
                </td>
             </tr>
          {% endfor %}
          </tbody>
       </table>

       <ul>
          <li>
             <a href="{{ path('fos_user_index') }}" class="btn btn-sm">HOME</a>
          </li>
       </ul>

{% endblock FOSUserBundle_content %}
